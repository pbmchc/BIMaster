<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".CredentialsActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:padding="2dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/labelServer"
                android:text="@string/server"
                android:layout_marginBottom="@dimen/activity_margin_half"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edtServer"
                android:layout_below="@id/labelServer"
                android:layout_marginBottom="@dimen/activity_margin_half"
                android:text="192.168.0.13" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/labelInstance"
                android:text="@string/instance"
                android:layout_below="@id/edtServer"
                android:layout_marginBottom="@dimen/activity_margin_half"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edtInstance"
                android:layout_below="@id/labelInstance"
                android:layout_marginBottom="@dimen/activity_margin_half"
                android:text="Reports_MSSQLSERVER16"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/labelName"
                android:text="@string/username"
                android:layout_below="@id/edtInstance"
                android:layout_marginBottom="@dimen/activity_margin_half"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edtName"
                android:layout_below="@id/labelName"
                android:layout_marginBottom="@dimen/activity_margin_half" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/labelPass"
                android:layout_below="@id/edtName"
                android:text="@string/password"
                android:layout_marginBottom="@dimen/activity_margin_half"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edtPass"
                android:layout_below="@id/labelPass"
                android:layout_marginBottom="@dimen/activity_margin_half"
                android:inputType="textPassword"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ZAPISZ"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/edtPass"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:id="@+id/btnSave"
                android:backgroundTint="@color/button_color"
                />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
